<h1 align="center">Signup for Coffeechat</h1>
<h4 class="ui center aligned medium icon header">
  <i class="circular orange coffee icon"></i>
  Say Something
</h4>

    <div class='row'>
      <div class='col-xs-12'>
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :username %>
            </div>
            <div class="ui fluid form">
              <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            </div>
          </div>
          <br/>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :password %>
            </div>
            <div class="ui fluid form">
              <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
            </div>
          </div> 
           <br/>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "Sign up", class: 'ui secondary basic button' %>
            </div>
          </div>
        <% end %>

       
      </div>
    </div>